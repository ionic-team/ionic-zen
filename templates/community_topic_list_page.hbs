<div class="container-divider"></div>
<div class="container">
  <nav class="sub-nav">
    {{breadcrumbs}}
    {{search submit=false class='search' scoped=true}}
  </nav>
</div>
<div class="container">
  <header class="page-header community-header">
    <div class="page-header-item dropdown">
      <div class="dropdown-toggle">
        <h4>{{t 'community_topics'}}</h4>
      </div>
      <span class="dropdown-menu" role="menu">
        {{#link 'topics' role='menuitem' selected='true'}}
          {{t 'show_topics'}}
        {{/link}}
        {{#link 'posts' role='menuitem'}}
          {{t 'show_all_posts'}}
        {{/link}}
      </span>
    </div>
    <span class="page-header-item post-to-community">
      {{link 'new_post' role='button' class='button-large'}}
    </span>
  </header>

  {{#unless topics}}
    <p>{{t 'no_content'}}</p>
  {{/unless}}

  <ul class="striped-list topics">
    {{#each topics}}
      <li class="striped-list-item  topics-item {{#if internal}}striped-list-item-internal{{/if}}">
        <span class="striped-list-info">
          <a href="{{url}}"
             title="Presale Question"
             class="striped-list-title">{{name}}</a>
          <span class="post-overview-item">
            {{#if internal}}
              <span class="status-label striped-list-status">
                {{t 'internal'}}
              </span>
            {{/if}}
          </span>
          <ul class="meta-group">
            <li class="meta-data">{{excerpt description}}</li>
          </ul>
        </span>
        <div class="post-overview-count striped-list-count">
          <span class="striped-list-count-item">
            <span class="striped-list-number">{{t 'post_count' count=post_count}}</span>
            posts
          </span>
          <span class="striped-list-count-item">
            <span class="striped-list-number">{{t 'follower_count' count=follower_count}}</span>
            followers
          </span>
        </div>
      </li>
    {{/each}}
  </ul>

  {{pagination}}

  {{#if featured_posts}}
    <section class="section community-featured-posts">
      <h3>{{t 'featured_posts'}}</h3>
      <ul class="promoted-articles">
        {{#each featured_posts}}
          <li class="promoted-articles-item">
            <a href="{{url}}">
              {{title}}
            </a>
          </li>
        {{/each}}
      </ul>
    </section>
  {{/if}}

{{!--
  <section class="community-activity activity">
    {{#if help_center.community_enabled}}
      {{recent_activity scope='community'}}
    {{/if}}
  </section>
  --}}

  <section class="container community-footer">
    <h4>{{t 'suggest_new_post'}}</h4>
    {{link 'new_post' role='button' class='button-large'}}
  </section>
</div>
